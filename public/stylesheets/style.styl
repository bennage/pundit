@import 'normalize'
@import 'mixins'

bg = rgb(222,242,196)
dark = rgb(102,84,70)
contrast = rgb(229,104,63)
accent2 = rgb(174,204,182)
accent = rgb(128,153,148)
light_text = hsl(0,100%,100%)
speech_bg = hsl(0,0%,90%)
highlight = #FFFF99

pad = 12px

@import 'layout'
@import 'notification'

a
	color accent2
	text-decoration none
	border-bottom 1px dotted accent2

body
	font 14px 'Lucida Grande', Helvetica, Arial, sans-serif
	background-color bg
	background-image dirt

	header
		.pad
			padding pad
			background-color dark

		#account
			position absolute
			right pad
			top pad

			ul
				list-style none
				margin 0
				li
					display inline
					padding-right 1em
		h1
			margin 0
			a, a:visited
				text-decoration none
				border none
				color light_text
				text-shadow white 0px 0px 2px, black 1px 1px 0px

	#main
		background-color white

	footer
		.pad
			padding pad
			background-color dark
			color white

.context 
	vendor(box-flex, 1)
	width 100%

.highlight
	background-color highlight
	vendor(box-shadow, 0px 0px 20px highlight)

.has-comments:before
	content attr(data-count);
	font-size 10px
	text-align center
	font-family monospace
	display block
	background-image url(/comment_yellow.gif)
	position absolute
	width 16px
	height 16px
	left 6px

#for-review 
	background-color #ededed
	margin 1em
	border 1px solid #ddd
	padding 1em
	font-family Georgia

	.focus
		background-color highlight
		vendor(box-shadow, 0px 0px 30px highlight)
		border 1px dotted rgba(0,0,0,0.2)

	 p, h1, h2, h3
		border 1px solid transparent

	img
		max-width 100%

#comments-spacer
	width 400px
	margin 1em 1em 1em 0em

#comments
	width 400px
	background-color #ededed
	border 1px solid #ddd
	padding 1em
	margin 1em 1em 1em 0em
	position fixed
	top 64px
	right 0

	header
		height 100%

	#comment-editor
		text-align right

		.comment-body
			min-height 200px
			background-color #ddd
			text-align left

		#save
			margin-top 4px

		#comment-status
			font-style italic
			padding-right 1em
			color green

	.history
		.comment.handled
			border 1px dotted rgba(0,0,0,0.2)
			background-color rgba(0,0,0,0.2)
		.comment
			margin 4px 0px 8px 0px
			padding 4px
			font-family Georgia
			border 1px solid transparent
			background-color highlight
			vendor(border-radius, 4px)
			.author
				img
					background-color black
					width 24px
					height 24px
					vendor(border-radius, 4px)
					float left
				.login
					font-size 22px
					margin-left 6px
				.timestamp
					float right
					color rgba(0,0,0,0.5)
					font-style italic
			p
				margin 0