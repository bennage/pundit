body
	font-family wf_segoe-ui_light, 'Segoe UI Light', 'Segoe WP Light', 'Segoe UI', 'Segoe WP', Tahoma, Arial, sans-serif

.repository
	display table
	width 100%

	.tree
		vertical-align top
		display table-cell
		width 10%

		margin 0
		padding 0
		padding-right 2em

		h2
			margin-top 0

		ul
			list-style-type none
			margin 0
			padding-left 2em
		li
			margin 0

	.tree > ul
		padding-left 0

	.document
		display table-cell
		width 90%
		vertical-align top
